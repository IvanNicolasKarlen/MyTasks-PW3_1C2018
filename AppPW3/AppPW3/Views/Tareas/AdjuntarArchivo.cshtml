@model AppPW3.Entidades.ArchivoTarea
@using AppPW3.Entidades

@{
    ViewBag.Title = "Crear";
}
@section Body
{
<div class="col-md-10 offset-1 ">
    <ol class="breadcrumb shadow p-3 mb-5 bg-dark">
        <li class="breadcrumb-item text-muted">Comentarios</li>
        <li class="breadcrumb-item active text-white">Adjuntar Archivo</li>
    </ol>
    <div class="btn-group mb-4">
        <a class="btn btn-outline-primary" href="@Url.Content("~/Carpetas/Index")">Mis Carpetas</a>
        <a class="btn btn-outline-info" href="@Url.Content("~/Carpetas/Tareas/")">Mis Tareas</a>
    </div>
    <div class="card">
        <div class="card-header bg-success mb-3 text-white">
            Seleccione un archivo para adjuntar:
        </div>
        @using (Html.BeginForm("AdjuntarArchivo", "Tareas", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group col-md-10">
                @Html.LabelFor(model => model.RutaArchivo, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.RutaArchivo, new { htmlAttributes = new { type = "file", @class = "form-control", required = true, placeholder = "Este campo es obligatorio." } })
                    @Html.ValidationMessageFor(model => model.RutaArchivo, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="col-md-4 mt-4 mb-5">
                <button type="submit" class="btn btn-outline-success">Adjuntar Archivo</button>
            </div>
        }
        <input type="hidden" value="@ViewBag.idTarea" id="idTarea" name="idTarea" />
    </div>
</div>
}

