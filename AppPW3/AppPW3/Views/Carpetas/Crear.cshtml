@model AppPW3.Entidades.Carpeta
@using AppPW3.Entidades

@{
    ViewBag.Title = "Crear";
}

@section Body
{
    <div class="col-md-10 offset-1 ">

        <ol class="breadcrumb shadow p-3 mb-5 bg-dark">
            <li class="breadcrumb-item text-muted">Mis Carpetas</li>
            <li class="breadcrumb-item active text-white">Crear nueva</li>
        </ol>


        <div class="card">
            <div class="card-header bg-success mb-3 text-white">
                Complete los siguientes campos para crear una nueva carpeta:
            </div>

           @* EMPIEZA FORMULARIO *@
            <form method="post" action="/Carpetas/Crear">

                <div class="form-row">
                    <input hidden name="IdUsuario" value="2" />
                    <input hidden name="FechaCreacion" />

                    <div class="form-group col-md-6">
                        <label class="col-sm-3 col-form-label">Nombre *</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Este campo es obligatorio." name="Nombre" required />
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="col-sm-3 col-form-label">Descripción</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Descripcion" placeholder="Este campo es opcional." />
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mt-4 mb-5">
                    <button type="submit" class="btn btn-outline-success">Crear Nueva Carpeta</button>
                    @*<button type="reset" class="btn btn-outline-info">Restablecer</button>*@
                </div>

            </form>
        </div>
        </div>

}

