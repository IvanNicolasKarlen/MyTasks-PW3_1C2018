@model AppPW3.Entidades.Carpeta
@using AppPW3.Entidades

@{
    ViewBag.Title = "Crear";
}

@section Body
{
    <div class="col-md-10 offset-1 ">

        <ol class="breadcrumb shadow p-3 mb-5 bg-dark">
            <li class="breadcrumb-item text-muted">Mis Carpetas</li>
            <li class="breadcrumb-item active text-white">Crear nueva</li>
        </ol>

        <div class="card">
            <div class="card-header bg-success mb-3 text-white">
                Complete los siguientes campos para crear una nueva carpeta:
            </div>

            @using (Html.BeginForm("Crear", "Carpetas", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", required = true, placeholder = "Este campo es obligatorio." } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", required = true, placeholder = "Este campo es obligatorio." } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
         
                <div class="col-md-4 mt-4 mb-5">
                    <button type="submit" class="btn btn-outline-success">Crear Nueva Carpeta</button>
                </div>
            }
        </div>
    </div>
}
            

