

@{
    ViewBag.Title = "_LayoutApp";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AppPW3</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CSS/estiloSidebar.css" rel="stylesheet" type="text/css" />
    <link rel="icon" href="~/Content/Images/task.jpg" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/ModalScript.js"></script>
</head>
<body>
    <!-- COMIENZA NAVBAR -->
    <nav class="navbar navbar-dark bg-dark">
        <a href="#menu-toggle" class="navbar-toggler" id="menu-toggle"><span class="navbar-toggler-icon"></span></a>

        <form class="form-inline my-2 my-lg-0" action="/Home/Logout">
            @*<input type="text" class="form-control mr-sm-2 form-control-plaintext" value="" readonly>*@
            <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Cerrar Sesión</button>
        </form>

    </nav>
    <!-- TERMINA NAVBAR -->
    <!-- COMIENZA SIDEBAR -->
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="@Url.Content("~/Home/Index")">Inicio</a>
                </li>

                <li>
                    <a href="@Url.Content("~/Carpetas/Index")">Mis Carpetas</a>
                </li>

                <li>
                    <a href="@Url.Content("~/Tareas/Index/1")">Mis Tareas</a>
                </li>

                <li>
                    <a href="@Url.Content("~/Carpetas/Crear")">Crear Carpeta</a>
                </li>

                <li>
                    <a href="@Url.Content("~/Tareas/Crear")">Crear Tareas</a>
                </li>

                @*<li>
                        <a href="#">Ajustes</a>
                    </li>*@
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- COMIENZA CONTENIDO DE LA PAGINA -->
        <div id="page-content-wrapper" class="container-fluid">

            <!-- el contenido que cambiará entre paginas, en la vista lo comenzamos con un @section Body{}-->
            @RenderSection("Body")


        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- TERMINA NAVBAR -->



    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/js/app.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"type="text/javascript"></script>
</body>
</html>